  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;600;700&display=swap" rel="stylesheet">
  <style>
    *, *::before, *::after { margin:0; padding:0; box-sizing:border-box; }
    html { font-size:16px; }
    body { font-family:'Inter',sans-serif; line-height:1.6; background:#f9fbfd; color:#333; }
    a { text-decoration:none; color:inherit; }
    img { display:block; width:100%; }
    :root { --clr-primary:#00234e; --clr-secondary:#0062ff; --clr-light:#ffffff; --clr-gray:#f1f5f9; --radius:8px; --transition:all .3s ease; }
    header { background:var(--clr-light); padding:1rem 2rem; box-shadow:0 2px 8px rgba(0,0,0,0.1); display:flex; align-items:center; }
    header a { margin-right:1rem; font-size:1rem; color:var(--clr-secondary); }
    header h1 { font-size:1.5rem; color:var(--clr-primary); font-weight:600; }
    .gallery { max-width:1000px; margin:2rem auto; display:grid; grid-template-columns:repeat(auto-fit,minmax(300px,1fr)); gap:1rem; }
    .gallery img { border-radius:var(--radius); transition:opacity .3s; }
    .gallery img:hover { opacity:.8; }
    .description { max-width:800px; margin:2rem auto; background:var(--clr-light); padding:2rem; border-radius:var(--radius); box-shadow:0 2px 12px rgba(0,0,0,0.05); }
    .description h2 { font-size:2rem; margin-bottom:1rem; color:var(--clr-primary); }
    .description p { font-size:1rem; color:#555; margin-bottom:1rem; }
    .description ul { list-style:disc inside; margin-left:1rem; color:#555; }
    .btn-back { display:inline-block; margin:2rem; padding:.5rem 1rem; background:var(--clr-secondary); color:var(--clr-light); border-radius:var(--radius); font-weight:600; transition:var(--transition); }
    .btn-back:hover { background:var(--clr-primary); }
    .social { display: flex; justify-content: center; gap: 1.5rem; margin-top: 1rem; }
    .social a { font-size: 2rem; color: white; transition: var(--transition); }
    .social a:hover { color: var(--clr-secondary); }
    footer { background:var(--clr-primary); color:var(--clr-light); text-align:center; padding:1.5rem; margin-top:2rem; }
    @media(max-width:600px){ .gallery { grid-template-columns:1fr; } }
        /* Map */
    .map h2 { text-align:center; margin-bottom:2rem; color:var(--primary); }
    .map iframe { width:100%; height:350px; border:none; box-shadow:0 2px 12px rgba(0,0,0,0.1); }
  </style>
</head>
